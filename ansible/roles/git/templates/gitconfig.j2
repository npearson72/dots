[user]
    name = {{ full_name }}
    email = {{ git.email }}
[hub]
    protocol = https
[alias]
    aa = add -A
    st = status
    co = checkout
    count = !git shortlog -sn
    lg = log --pretty=format:'%Cred%h%Creset - %s%C(yellow)%d%Creset %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[apply]
    whitespace = nowarn
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[core]
    excludesfile = ~/.gitignore
    editor = nvim
    pager = diff-so-fancy | less --tabs=4 -RFX
[credential]
    helper = osxkeychain
[diff-so-fancy]
    markEmptyLines = false
    stripLeadingSymbols = false
[help]
    autocorrect = 1
[push]
    default = simple
[pull]
    default = current
