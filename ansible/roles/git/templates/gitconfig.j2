[user]
    name = {{ git.full_name }}
    email = {{ git.email }}
[hub]
    protocol = https
[alias]
    aa = add -A
    st = status
    co = checkout
    count = !git shortlog -sn
[apply]
    whitespace = nowarn
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[core]
    excludesfile = ~/.gitignore
    editor = nvim
    pager = diff-so-fancy | less --tabs=4 -RFX
[credential]
    helper = osxkeychain
[diff-so-fancy]
    stripLeadingSymbols = false
[help]
    autocorrect = 1
[push]
    default = simple
[pull]
    default = current
[init]
	defaultBranch = master
